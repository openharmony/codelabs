import { DotMandalaLayer } from './DotMandalaLayer'
import router from '@ohos.router'
import { AUDIO_DATA } from '../../model/AudioItem'

@Entry
@Component
export struct MindfulnessPage {

  @State duration: number = 10 * 60
  @State isRunning: boolean = false

  // 1. ã€æ–°å¢ã€‘å¼•å…¥å…¨å±€å­—ä½“ç¼©æ”¾
  @StorageProp('appFontScale') fontScale: number = 1.0;

  private timerId?: number

  // ğŸµ éŸ³é¢‘æ’­æ”¾å™¨ï¼ˆä»ç„¶ç”¨ Videoï¼‰
  private audioController: VideoController = new VideoController()

  // å½“å‰èƒŒæ™¯éŸ³ï¼ˆå…ˆå›ºå®šä¸€ä¸ªï¼‰
  private audio = AUDIO_DATA[0]

  aboutToAppear() {
    // ä»è·¯ç”±å‚æ•°è·å– durationï¼ˆåˆ†é’Ÿï¼‰
    const params = router.getParams() as Record<string, number>
    if (params?.duration !== undefined) {
      this.duration = params.duration * 60
    } else {
      this.duration = 5 * 60
    }
  }

  build() {
    Stack() {

      // ===== ğŸµ éšå½¢éŸ³é¢‘æ’­æ”¾å™¨ =====
      Video({
        src: this.audio.source,
        controller: this.audioController
      })
        .width(1)
        .height(1)
        .opacity(0)
        .controls(false)
        .autoPlay(false)

      // ===== UI =====
      Column({ space: 36 }) {

        Row() {
          DotMandalaLayer()
        }
        .width('100%')
        .justifyContent(FlexAlign.Center)

        Text('æ”¾æ¾ä½ çš„æ€ç»ª')
          .fontSize(36 * this.fontScale) // 2. æ ‡é¢˜å˜å¤§
          .fontWeight(FontWeight.Medium)

        Text(this.formatTime())
          .fontSize(48 * this.fontScale) // 3. å€’è®¡æ—¶æ•°å­—å˜å¤§
          .fontWeight(FontWeight.Bold)

        Button(this.isRunning ? 'åœæ­¢æ­£å¿µ' : 'å¼€å§‹æ­£å¿µ')
          .fontSize(30 * this.fontScale) // 4. æŒ‰é’®æ–‡å­—å˜å¤§
          .height(60 * this.fontScale)   // 5. æŒ‰é’®é«˜åº¦ä¹Ÿéšä¹‹å˜å¤§
          .width(220 * this.fontScale)   // 6. æŒ‰é’®å®½åº¦ä¹Ÿéšä¹‹å˜å¤§
          .onClick(() => {
            this.toggleMeditation()
          })
      }
      .width('100%')
      .height('100%')
      .justifyContent(FlexAlign.Start)
      .alignItems(HorizontalAlign.Center)
      .padding({ top: 180 })
    }
  }

  toggleMeditation() {
    if (this.isRunning) {
      this.stopMeditation()
    } else {
      this.startMeditation()
    }
    this.isRunning = !this.isRunning
  }

  startMeditation() {
    // â–¶ï¸ æ’­æ”¾éŸ³é¢‘
    this.audioController.start()

    // â±ï¸ å¼€å§‹è®¡æ—¶
    if (this.timerId !== undefined) {
      return
    }

    this.timerId = setInterval(() => {
      if (this.duration > 0) {
        this.duration--
      } else {
        this.stopMeditation()
        this.isRunning = false
      }
    }, 1000)
  }

  stopMeditation() {
    // â¸ï¸ æš‚åœéŸ³é¢‘
    this.audioController.pause()

    // â¸ï¸ åœæ­¢è®¡æ—¶
    if (this.timerId !== undefined) {
      clearInterval(this.timerId)
      this.timerId = undefined
    }
  }

  formatTime(): string {
    let m = Math.floor(this.duration / 60)
    let s = this.duration % 60
    return `${m}:${s < 10 ? '0' + s : s}`
  }
}